<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGray">


    <TextView
        android:text="@string/user_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeUser"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/primaryGray"
        android:textColor="@color/primaryYellow"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/userNameEditText"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:background="@color/secondaryGray"
            android:textColor="@color/primaryYellow"
            android:textCursorDrawable="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/name"
            android:textColorHint="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/age"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userAgeTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/userAgeEditText"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:background="@color/secondaryGray"
            android:textColor="@color/primaryYellow"
            android:textCursorDrawable="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/age"
            android:textColorHint="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/gender"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userGenderTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerGender"
            android:background="@color/secondaryGray"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/height"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userHeightTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/userHeightEditText"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:background="@color/secondaryGray"
            android:textColor="@color/primaryYellow"
            android:textCursorDrawable="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/height"
            android:textColorHint="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/start_weight"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userWeightTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/userWeightEditText"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:background="@color/secondaryGray"
            android:textColor="@color/primaryYellow"
            android:textCursorDrawable="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/start_weight"
            android:textColorHint="@android:color/darker_gray"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/dream_weight"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:id="@+id/userDreamWeightTextView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="20dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:ems="10"
            android:id="@+id/userDreamWeightEditText"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:background="@color/secondaryGray"
            android:textColor="@color/primaryYellow"
            android:textCursorDrawable="@null"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:hint="@string/dream_weight"
            android:textColorHint="@android:color/darker_gray"/>
    </LinearLayout>

    <Button
        android:text="@string/user_button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primaryYellow"
        android:textColor="@color/primaryGray"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="18dp"
        android:id="@+id/userUpdateButton"/>
</LinearLayout>