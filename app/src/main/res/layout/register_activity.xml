<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryGray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/welcomeRegisterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center"
        android:background="@color/primaryGray"
        android:text="@string/register_welcome"
        android:textAlignment="center"
        android:textColor="@color/primaryYellow"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="5dp"
        android:background="@color/white"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="5dp"
        android:background="@color/white"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/registerAcceptPassword"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="5dp"
        android:background="@color/white"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textSize="20dp" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@color/primaryYellow"
        android:text="@string/register"
        android:textColor="@color/primaryGray"
        android:textSize="18dp" />

</LinearLayout>